<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Insurance Payments</h3>
      <div>
        <a href="/payments/new" class="btn btn-outline-primary">Make payment</a>
      </div>
    </div>
  </div>

  <div class="row space">
    <div>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= success_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
    </div>
    <div class="col-12">
      <form id="search-form" method="GET" action="/payments?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="search ...">
        </div>
        <div class="form-group mb-4 mr-2">
          <select required name="mode" class="form-control">
            <option value="by_customer_name">Search by customer name</option>
            <option value="by_insurance_id">Search by insurance id</option>
          </select>
        </div>
        <div class="form-group mb-4 ">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of payments</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>Payment ID</td>
            <td>Customer Name</td>
            <td>Insurance ID</td>
            <td>Amount Paid</td>
            <td>Date of payment</td>
            <td>Installment</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% payments.forEach((m) => { %>
            <tr>
              <td><small><%= m._id %></small></td>
              <td><small><%= m.customer_name %></small></td>
              <td><small><%= m.insurance._id %></small></td>
              <td><small><%= m.amount_paid %></small></td>
              <td><small><%= m.date_of_payment %></small></td>
              <td><small><%= m.which_installment %></small></td>
              <td>
                <a href='<%= "/payments/remove/" + m._id %>' class="btn btn-sm btn-outline-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>