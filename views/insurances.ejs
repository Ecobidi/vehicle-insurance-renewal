<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Vehicle Insurances</h3>
      <div>
        <a href="/insurances/new" class="btn btn-primary">Add Vehicle Insurance</a>
      </div>
    </div>
  </div>

  <div class="row space">
    <div class="col-12">
      <div>
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= success_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
    </div>
    <div class="col-12">
      <form id="search-form" method="GET" action="/insurances?" class="form-inline">
        <div class="form-group mb-4 mr-2">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="customer name ...">
        </div>
        <div class="form-group mb-4">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Vehicle Insurancs</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>Insurance ID</td>
            <td>Customer Name</td>
            <td>Insurance policy name</td>
            <td>Sum Assured</td>
            <td>Engine No.</td>
            <td>Chasis No.</td>
            <td>Start Date</td>
            <td>End Date</td>
            <td>Number of Installments</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% insurances.forEach((m) => { %>
            <tr>
              <td><small class="small"><%= m._id %></small></td>
              <td><small><%= m.customer_name %></small></td>
              <td><small><%= m.policy.name %></small></td>
              <td><small><%= m.sum_assured %></small></td>
              <td><small><%= m.vehicle_engine_number %></small></td>
              <td><small><%= m.vehicle_chasis_number %></small></td>
              <td><small><%= m.insurance_start_date %></small></td>
              <td><small><%= m.insurance_end_date %></small></td>
              <td><small><%= m.number_of_installments %></small></td>
              <td>
                <a href='<%= "/insurances/renew?insurance_id=" + m._id %>' class="btn btn-sm btn-info">Renew</a>
                <a href='<%= "/insurances/remove/" + m._id %>' class="btn btn-sm btn-outline-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>