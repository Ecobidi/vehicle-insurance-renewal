<%- include ('partials/top') %>
  .<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
      <h2 class="mb-3">Renew Vehicle Insurance</h2>
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <form action="/insurances/renew" method="GET">
        <div class="form-group mb-2">
          <input type="text" class="form-control text-center" style="width: 70%; margin: auto;" name="insurance_id" placeholder="Insurance ID...">
        </div>
        <div class="form-group">
          <button class="btn btn-primary">Get Insurance Info</button>
        </div>
      </form>
    </div>
  </div>

  <% if (renewInsurance) { %>
    <div class="row">
      <div class="col-lg-6 col-md-12">
        <table class="table table-striped">
          <tbody>
            <tr>
              <td>Policy Name Used</td>
              <td><%= insurance.policy.name %></td>
            </tr>
            <tr>
              <td>Customer Name</td>
              <td>(NGN) <%= insurance.customer_name %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-lg-6 col-md-12">
        <table class="table table-striped">
          <tbody>
            <tr>
              <td>Vehicle Chasis Number</td>
              <td><%= insurance.vehicle_chasis_number %></td>
            </tr>
            <tr>
              <td>Vehicle Engine Number</td>
              <td><%= insurance.vehicle_engine_number %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-12">
        <div class="jumbotron">
          <h3 class="lead mb-3">Fill in all the below information to renew vehicle insurance</h3>
          <form class="row" action="/insurances/renew" method="POST">
            <input type="hidden" name="insurance_id" value='<%= insurance._id %>'>
            <div class="form-group col-4">
              <label>Sum Assured</label>
              <input class="form-control" required type="number" name="sum_assured">
            </div>
            <div class="form-group col-4">
              <label>Insurance Start Date</label>
              <input class="form-control" required type="date" name="insurance_start_date">
            </div>
            <div class="form-group col-4">
              <label>Insurance End Date</label>
              <input class="form-control" required type="date" name="insurance_end_date">
            </div>
            <div class="form-group col-6 offset-3">
              <button type="submit" class="btn btn-primary btn-block">Renew</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>