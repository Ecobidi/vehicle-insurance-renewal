<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">License Details</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <% if (! edit) { %>
      <form action="/licenses/new" class="row" method="POST" enctype="multipart/form-data">
      <% } else { %>
      <form action='<%= "/licenses/edit/" + tricycle._id  %> ' class="row" method="POST">
      <% } %>
        <div class="form-group col-4">
          <label>Amount Paid</label>
          <input value='<%= license.amount_paid %>' type="text" class="form-control" name="amount_paid" required>
        </div>
        <div class="form-group col-4">
          <label>Date of Issue</label>
          <input value='<%= license.date_of_renewal %>' type="date" class="form-control" name="date_of_renewal" required>
        </div>
        <div class="form-group col-4">
          <label>Date of Expiry</label>
          <input value='<%= license.date_of_expiry %>' type="date" class="form-control" name="date_of_expiry" required>
        </div>
        <div class="form-group col-4">
          <label>Tricycle Metro Number </label>
          <input value='<%= license.tricycle_metro_no %>' type="text" class="form-control" name="tricycle_metro_no" required>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>

  </div>

</main>
</div>
</div> 

<%- include ('partials/bottom') %>