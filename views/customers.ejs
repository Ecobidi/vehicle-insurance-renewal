<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Customer</h3>
      <div>
        <a href="/customers/new" class="btn btn-outline-primary">Add Customer</a>
      </div>
    </div>
  </div>

  <div class="row space">
    
    <div class="col-12">
      <div>
        <% if (success_msg && success_msg.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= success_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <form id="search-form" method="GET" action="/customers" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="customer name ...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Customers</h4>
      <table class="table table-bordered table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Phone</td>
            <td>Address / City</td>
            <td>Place of Origin</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% customers.forEach((m) => { %>
            <tr>
              <td><small><%= m.last_name %></small></td>
              <td><small><%= m.first_name + " " + m.middle_name %></small></td>
              <td><small><%= m.phone %></small></td>
              <td><small><%= m.address + " " + m.city %></small></td>
              <td><small><%= m.lga_of_origin + ", " + m.state_of_origin %></small></td>
              <td>
                <a href='<%= "/customers/remove/" + m._id %>' class="btn btn-sm btn-outline-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 


<%- include ('partials/bottom') %>