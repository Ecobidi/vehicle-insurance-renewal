<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Insurance Policies</h3>
      <div>
        <a href="/policies/new" class="btn btn-outline-primary" data-toggle="modal" data-target="#modelId">Add Policy</a>
      </div>
    </div>
  </div>

  <div class="row space">
    <div>
      <% if (success_msg && success_msg.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong><%= success_msg %></strong> 
        </div>
        <script>
          $(".alert").alert();
        </script>
      <% } %>
    </div>
    <div class="col-12">
      <form id="search-form" method="GET" action="/policies?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="search ...">
        </div>
        <div class="form-group mb-4 ">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of policies</h4>
      <table class="table table-striped">
        <thead class="font-weight-bold">
          <tr>
            <td>Policy ID</td>
            <td>Policy Name</td>
            <td>Policy Cost</td>
            <td>Policy Duration (No. of months)</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% policies.forEach((m) => { %>
            <tr>
              <td><small><%= m._id %></small></td>
              <td><small><%= m.name %></small></td>
              <td><small><%= m.cost %></small></td>
              <td><small><%= m.duration %></small></td>
              <td>
                <a href='<%= "/policy/remove/" + m._id %>' class="btn btn-sm btn-outline-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Add Insurance Policy</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
          </div>
      <div class="modal-body">
        <div class="container-fluid">
          <form action="/policies/new" method="POST" class="row">
            <div class="form-group col-12">
              <label>Policy Name</label>
              <input class="form-control" name="name" required>
            </div>
            <div class="form-group col-12">
              <label>Policy Cost (Naira)</label>
              <input class="form-control" name="cost" type="number">
            </div>
            <div class="form-group col-12">
              <label>Policy Duration (months)</label>
              <input class="form-control" name="duration" type="number">
            </div>
            <div class="col-6 offset-3">
              <button class="btn btn-block btn-primary" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

