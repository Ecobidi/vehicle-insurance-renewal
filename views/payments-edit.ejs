<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Make Payment</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <form action="/payments/new" class="row" method="POST">
        <div class="form-group col-6">
          <label>Select Insurance</label>
          <select required name="insurance" class="form-control">
            <option></option>
            <% insurances.forEach(i => { %>
              <option value='<%= i._id %>'><%= `Insurance for vehicle with chasis number ${i.vehicle_chasis_number} and engine number: ${i.vehicle_engine_number} ` %></option>
            <% }) %>
          </select>
        </div>

        <div class="form-group col-4">
          <label>Amount Paid (Naira)</label>
          <input type="number" class="form-control" name="amount_paid" required>
        </div>
        <div class="form-group col-4">
          <label>Which installment</label>
          <input type="number" class="form-control" name="which_installment" required>
        </div>
        <div class="form-group col-4">
          <label>Date of Payment</label>
          <input type="date" class="form-control" name="date_of_payment" required>
        </div>
        <div class="col-12"></div>
        <div class="col-4 offset-4">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>

  </div>

</main>
</div>
</div> 

<%- include ('partials/bottom') %>