<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title">Insurance Details</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong class="text-uppercase" ><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>
      <form action="/insurances/new" class="row" method="POST">
        <div class="form-group col-6">
          <label>Select Customer</label>
          <select required name="customer" class="form-control">
            <option></option>
            <% customers.forEach(p => { %>
              <option value='<%= p._id %>'><%= p.fullname %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-6">
          <label>Select Policy</label>
          <select required name="policy" class="form-control">
            <option></option>
            <% policies.forEach(p => { %>
              <option value='<%= p._id %>'><%= p.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group col-4">
          <label>Vehicle Engine Number</label>
          <input type="text" class="form-control" name="vehicle_engine_number" required>
        </div>
        <div class="form-group col-4">
          <label>Vehicle Chasis Number</label>
          <input type="text" class="form-control" name="vehicle_chasis_number" required>
        </div>
        <div class="form-group col-4">
          <label>Vehicular Model</label>
          <input type="text" class="form-control" name="vehicle_model" required>
        </div>
        <div class="form-group col-4">
          <label>Sum Assured (Naira)</label>
          <input type="number" class="form-control" name="sum_assured" required>
        </div>
        <div class="form-group col-4">
          <label>How many payment installments</label>
          <input type="number" class="form-control" name="number_of_installments" required>
        </div>
        <div class="form-group col-4">
          <label>Insurance Start Date</label>
          <input type="date" class="form-control" name="insurance_start_date" required>
        </div>
        <div class="form-group col-4">
          <label>Insurance End Date</label>
          <input type="date" class="form-control" name="insurance_end_date" required>
        </div>
        <div class="form-group col-4">
          <label>Fullname of nominee</label>
          <input class="form-control" name="nominee_name" required>
        </div>
        <div class="col-12"></div>
        <div class="col-4 offset-4">
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
      </form>
    </div>

  </div>

</main>
</div>
</div> 

<%- include ('partials/bottom') %>